<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>[1.0] Android tiers</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>

				<li Class="PatchOperationSequence">
					<success>Always</success>
					<operations>
						<li Class="PatchOperationInsert">
							<xpath>/Defs/HediffDef[@Name="MSE_AddedBodyPartBionic"]</xpath>
							<value>
								<HediffDef Name="MSE_AddedBodyPartBionic-AT" ParentName="MSE_AddedBodyPartBionic" Abstract="True">
									<comps Inherit="False" /><stages Inherit="False" />
								</HediffDef>
							</value>
						</li>

						<li Class="PatchOperationAttributeSet">
							<xpath>/Defs/HediffDef[@ParentName="AddedBodyPartBaseAndroid2"][defName="ARArm"]</xpath>
							<attribute>ParentName</attribute>
							<value>MSE_AddedBodyPartBionic-AT</value>
						</li>

						<li Class="PatchOperationAttributeSet">
							<xpath>/Defs/HediffDef[@ParentName="AddedBodyPartBaseAndroid2"][defName="ARLeg"]</xpath>
							<attribute>ParentName</attribute>
							<value>MSE_AddedBodyPartBionic-AT</value>
						</li>
					</operations>
				</li>

				<li Class="PatchOperationSequence">
					<success>Always</success>
					<operations>
						<li Class="PatchOperationInsert">
							<xpath>/Defs/HediffDef[@Name="MSE_AddedBodyPartArchotech"]</xpath>
							<value>
								<HediffDef Name="MSE_AddedBodyPartArchotech-AT" ParentName="MSE_AddedBodyPartArchotech" Abstract="True">
									<comps Inherit="False" /><stages Inherit="False" />
								</HediffDef>
							</value>
						</li>

						<li Class="PatchOperationAttributeSet">
							<xpath>/Defs/HediffDef[@ParentName="AddedBodyPartBaseAndroid3"][defName="AR2Arm"]</xpath>
							<attribute>ParentName</attribute>
							<value>MSE_AddedBodyPartArchotech-AT</value>
						</li>

						<li Class="PatchOperationAttributeSet">
							<xpath>/Defs/HediffDef[@ParentName="AddedBodyPartBaseAndroid3"][defName="AR2Leg"]</xpath>
							<attribute>ParentName</attribute>
							<value>MSE_AddedBodyPartArchotech-AT</value>
						</li>
					</operations>
				</li>

			</operations>
		</match>
	</Operation>

</Patch>